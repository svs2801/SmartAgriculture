<?xml version="1.0" encoding="UTF-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:id="@id/drawer_layout"
    android:background="@drawable/farm">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/main_toolbar" />

        <TextClock
            android:id="@+id/DateTimeDisplay"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corners"
            android:gravity="center"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CityDisplay"
            tools:targetApi="jelly_bean_mr1" />
        <!--android:text="Day, date"-->


        <TextView
            android:id="@+id/CityDisplay"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_corners"
            android:gravity="center"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="217dp"
            android:layout_height="92dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_corners"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="Nigdi"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#01031C"
            tools:layout_editor_absoluteX="-11dp"
            tools:layout_editor_absoluteY="104dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="113dp"
            android:layout_height="90dp"
            android:layout_gravity="right"
            android:layout_marginTop="-90dp"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/test5"
            tools:layout_editor_absoluteX="253dp"
            tools:layout_editor_absoluteY="105dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="427dp"
            android:layout_margin="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/translucent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0">

            <!--TextView
                android:id="@+id/HumidityTextView"
                android:layout_width="144dp"
                android:layout_height="66dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="150dp"
                android:background="#60C3CEDA"
                android:gravity="center"
                android:hint="humidity"
                android:padding="1dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff" />

            <TextView
                android:layout_width="144dp"
                android:layout_height="34dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="150dp"
                android:background="#B1D4E0"
                android:gravity="center"
                android:padding="1dp"
                android:text="Humidity"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#0C2D48" />

            <TextView
                android:layout_width="145dp"
                android:layout_height="34dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="40dp"
                android:background="#B1D4E0"
                android:gravity="center"
                android:padding="1dp"
                android:text="Temperature"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#0C2D48" />

            <TextView
                android:id="@+id/TemperatureTextView"
                android:layout_width="145dp"
                android:layout_height="66dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="80dp"
                android:background="#60C3CEDA"
                android:gravity="center"
                android:hint="temperature"
                android:padding="1dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff" /-->
            <TextView
                android:id="@+id/HumidityTextView"
                android:layout_width="333dp"
                android:layout_height="66dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="150dp"
                android:background="#60C3CEDA"
                android:gravity="center"
                android:padding="1dp"
                android:text="Results for the soil sample"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000000"
                android:textColorHint="#ffffff" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="262dp"
                android:layout_marginTop="165dp"
                android:background="@drawable/translucent"

                >

                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/translucent"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="Soil Type"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="201dp"
                        android:layout_height="63dp"
                        android:background="@drawable/translucent"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:padding="1dp"

                        android:text="Alluvial"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#ffffff" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="177dp"
                        android:layout_height="63dp"
                        android:background="@drawable/translucent"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="Soil pH Range"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="185dp"
                        android:layout_height="63dp"
                        android:background="@drawable/translucent"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="Above 7"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#ffffff" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="177dp"
                        android:layout_height="63dp"
                        android:background="@drawable/translucent"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="Soil Moisture"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="185dp"
                        android:layout_height="63dp"
                        android:background="@drawable/translucent"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="16%"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#ffffff" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="74dp"
                        android:layout_marginTop="-18dp"
                        android:background="@drawable/translucent"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="Suggested     Crops"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="185dp"
                        android:layout_height="74dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/translucent"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="Rice, Oilseeds, Maize"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#ffffff" />

                </TableRow>


            </TableLayout>


        </FrameLayout>


    </LinearLayout>


    <RelativeLayout android:layout_height="fill_parent" android:layout_width="300.0dip" android:background="@color/white" android:layout_gravity="start">

        <include layout="@layout/main_nav_drawer"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>